<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GestaoChamados.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GestaoChamados.Mobile.Views"
    Title="Gestão de Chamados"
    FlyoutBehavior="Disabled">

    <!-- Login Page -->
    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Chamados (Usuário) -->
    <ShellContent
        Route="ChamadosPage"
        Title="Meus Chamados"
        Icon="list.png"
        ContentTemplate="{DataTemplate views:ChamadosPage}" />

    <!-- Dashboard (Técnico) -->
    <ShellContent
        Route="DashboardPage"
        Title="Dashboard"
        Icon="dashboard.png"
        ContentTemplate="{DataTemplate views:DashboardPage}" />

    <!-- Dashboard Gerencial (Admin) -->
    <ShellContent
        Route="GerenteDashboardPage"
        Title="Dashboard Gerencial"
        Icon="dashboard.png"
        ContentTemplate="{DataTemplate views:GerenteDashboardPage}" />

</Shell>
