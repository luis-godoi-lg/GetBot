<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GestaoChamados.Mobile.ViewModels"
             x:Class="GestaoChamados.Mobile.Views.DetalhesChamadoPage"
             BackgroundColor="#F5F6FA"
             Shell.NavBarIsVisible="False">
    
    <ContentPage.BindingContext>
        <vm:DetalhesChamadoViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header Mobile -->
        <Grid Grid.Row="0" BackgroundColor="#17A2B8" Padding="12,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- BotÃ£o Voltar -->
            <Button Grid.Column="0"
                    Text="â†" 
                    Command="{Binding VoltarCommand}"
                    BackgroundColor="Transparent" 
                    TextColor="White"
                    FontSize="28"
                    WidthRequest="44"
                    HeightRequest="44"
                    Padding="0"
                    Margin="0,0,8,0"/>
            
            <!-- TÃ­tulo -->
            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                <Label Text="{Binding TituloHeader}" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       TextColor="White"
                       LineBreakMode="TailTruncation"/>
                <Label Text="{Binding ProtocoloTexto}" 
                       FontSize="11" 
                       TextColor="White"
                       Opacity="0.9"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Scroll Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="12" Spacing="12">
                
                <!-- Card de InformaÃ§Ãµes -->
                <Border BackgroundColor="White"
                       Stroke="#E5E7EB"
                       StrokeThickness="1"
                       Padding="14"
                       StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="12">
                        
                        <!-- Protocolo e Data -->
                        <Grid ColumnDefinitions="*,*">
                            <VerticalStackLayout Grid.Column="0" Spacing="3">
                                <Label Text="# Protocolo" FontSize="11" FontAttributes="Bold" TextColor="#6B7280"/>
                                <Label Text="{Binding Chamado.Id, StringFormat='#{0:D4}'}" 
                                       FontSize="14" FontAttributes="Bold" TextColor="#17A2B8"/>
                            </VerticalStackLayout>
                            
                            <VerticalStackLayout Grid.Column="1" Spacing="3">
                                <Label Text="ðŸ• Data" FontSize="11" FontAttributes="Bold" TextColor="#6B7280"/>
                                <Label Text="{Binding Chamado.DataCriacao, StringFormat='{0:dd/MM/yy HH:mm}'}" 
                                       FontSize="13" TextColor="#374151"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Divisor -->
                        <BoxView HeightRequest="1" Color="#E5E7EB"/>

                        <!-- Assunto -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="ðŸ“ Assunto" FontSize="11" FontAttributes="Bold" TextColor="#6B7280"/>
                            <Label Text="{Binding Chamado.Titulo}" 
                                   FontSize="15" FontAttributes="Bold" TextColor="#1F2937" LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>

                        <!-- Status e Criado Por -->
                        <Grid ColumnDefinitions="*,*">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="ðŸ“Š Status" FontSize="11" FontAttributes="Bold" TextColor="#6B7280"/>
                                <Border Padding="8,4"
                                       BackgroundColor="{Binding StatusColor}"
                                       StrokeThickness="0"
                                       HorizontalOptions="Start"
                                       StrokeShape="RoundRectangle 4">
                                    <Label Text="{Binding Chamado.Status}" 
                                           FontSize="11" FontAttributes="Bold" TextColor="White"/>
                                </Border>
                            </VerticalStackLayout>
                            
                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                <Label Text="ðŸ‘¤ Criado Por" FontSize="11" FontAttributes="Bold" TextColor="#6B7280"/>
                                <Label Text="{Binding Chamado.UsuarioEmail}" 
                                       FontSize="12" TextColor="#374151" LineBreakMode="TailTruncation"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- TÃ©cnico -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="ðŸ› ï¸ TÃ©cnico" FontSize="11" FontAttributes="Bold" TextColor="#6B7280"/>
                            <Label Text="{Binding TecnicoTexto}" 
                                   FontSize="13" TextColor="#374151"/>
                        </VerticalStackLayout>

                        <!-- DescriÃ§Ã£o -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="ðŸ“„ DescriÃ§Ã£o" FontSize="11" FontAttributes="Bold" TextColor="#6B7280"/>
                            <Border BackgroundColor="#F9FAFB"
                                   Stroke="#E5E7EB"
                                   StrokeThickness="1"
                                   Padding="12"
                                   MinimumHeightRequest="100"
                                   StrokeShape="RoundRectangle 6">
                                <Label Text="{Binding Chamado.Descricao}" 
                                       FontSize="13" TextColor="#374151" LineBreakMode="WordWrap"/>
                            </Border>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Ãrea de Chat (visÃ­vel quando status = Em Atendimento) -->
                <Border IsVisible="{Binding ChatVisivel}"
                       BackgroundColor="White"
                       Stroke="#E5E7EB"
                       StrokeThickness="1"
                       Padding="12"
                       StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ðŸ’¬ Chat com TÃ©cnico" FontSize="13" FontAttributes="Bold" TextColor="#1F2937"/>
                        
                        <!-- Mensagens do Chat -->
                        <Border BackgroundColor="#F8F9FA"
                               Stroke="#E5E7EB"
                               StrokeThickness="1"
                               HeightRequest="250"
                               StrokeShape="RoundRectangle 8">
                            <ScrollView x:Name="ChatScrollView" Padding="8">
                                <VerticalStackLayout x:Name="ChatMessagesLayout" Spacing="8">
                                    <!-- Mensagens adicionadas via code-behind -->
                                </VerticalStackLayout>
                            </ScrollView>
                        </Border>
                        
                        <!-- Input de Mensagem -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Border Grid.Column="0"
                                   BackgroundColor="White"
                                   Stroke="#DEE2E6"
                                   StrokeThickness="1"
                                   Padding="10,8"
                                   StrokeShape="RoundRectangle 18">
                                <Entry x:Name="MessageEntry"
                                       Text="{Binding NovaMensagem}"
                                       Placeholder="Digite sua mensagem..."
                                       FontSize="14"
                                       BackgroundColor="Transparent"
                                       VerticalOptions="Center"
                                       ReturnType="Send"
                                       ReturnCommand="{Binding EnviarMensagemCommand}"/>
                            </Border>

                            <Border Grid.Column="1"
                                   BackgroundColor="#17A2B8"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Margin="8,0,0,0"
                                   StrokeThickness="0"
                                   StrokeShape="RoundRectangle 20">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding EnviarMensagemCommand}"/>
                                </Border.GestureRecognizers>
                                <Label Text="âž¤" 
                                       FontSize="18" 
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       FontAttributes="Bold"/>
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- BotÃ£o Atualizar -->
                <Button Text="ðŸ”„ Atualizar InformaÃ§Ãµes"
                       Command="{Binding RefreshCommand}"
                       BackgroundColor="#6B7280"
                       TextColor="White"
                       HeightRequest="44"
                       CornerRadius="8"
                       FontSize="14"
                       FontAttributes="Bold"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="3"
              IsVisible="{Binding IsBusy}"
              BackgroundColor="#80000000">
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              Color="#17A2B8"
                              HeightRequest="50"
                              WidthRequest="50"
                              HorizontalOptions="Center"
                              VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>
