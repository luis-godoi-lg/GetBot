<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:GestaoChamados.Mobile.Helpers"
             x:Class="GestaoChamados.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <helpers:StringToBoolConverter x:Key="StringToBoolConverter" />
            <helpers:StatusToColorConverter x:Key="StatusToColorConverter" />
            <helpers:PrioridadeToColorConverter x:Key="PrioridadeToColorConverter" />
            <helpers:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter" />
            <helpers:IsBotToColorConverter x:Key="IsBotToColorConverter" />
            <helpers:StatusToButtonVisibilityConverter x:Key="StatusToButtonVisibilityConverter" />

            <!-- Cores Adicionais -->
            <Color x:Key="Success">#28A745</Color>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
