<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="GestaoChamados.Mobile.Controls.CustomAlert"
               Color="#80000000"
               CanBeDismissedByTappingOutsideOfPopup="False">
    
    <!-- Card do Alerta -->
    <Border x:Name="AlertCard"
            BackgroundColor="White"
            StrokeThickness="0"
            WidthRequest="290"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="0">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="16" />
        </Border.StrokeShape>
        
        <Border.Shadow>
            <Shadow Brush="Black"
                    Opacity="0.3"
                    Radius="20"
                    Offset="0,8" />
        </Border.Shadow>
        
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Header colorido -->
            <Border x:Name="HeaderBorder"
                    Grid.Row="0"
                    BackgroundColor="#0066CC"
                    Padding="14,10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16,16,0,0" />
                </Border.StrokeShape>
                
                <HorizontalStackLayout Spacing="10">
                    <Label x:Name="IconLabel"
                           Text="ℹ"
                           FontSize="22"
                           TextColor="White"
                           VerticalOptions="Center" />
                    
                    <Label x:Name="TitleLabel"
                           Text="Informação"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"
                           LineBreakMode="TailTruncation"
                           MaxLines="1" />
                </HorizontalStackLayout>
            </Border>
            
            <!-- Conteúdo da mensagem -->
            <ScrollView Grid.Row="1"
                        MaximumHeightRequest="160">
                <Label x:Name="MessageLabel"
                       Text="Mensagem aqui"
                       FontSize="13"
                       TextColor="#333333"
                       Padding="16,14"
                       LineBreakMode="WordWrap" />
            </ScrollView>
            
            <!-- Botões -->
            <Grid Grid.Row="2"
                  ColumnDefinitions="*,*"
                  ColumnSpacing="8"
                  Padding="14,10">
                
                <!-- Botão Cancelar -->
                <Border x:Name="CancelButtonBorder"
                        Grid.Column="0"
                        BackgroundColor="#6C757D"
                        StrokeThickness="0"
                        Padding="0,9">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCancelTapped" />
                    </Border.GestureRecognizers>
                    
                    <Label x:Name="CancelLabel"
                           Text="Não"
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Border>
                
                <!-- Botão OK -->
                <Border x:Name="OkButtonBorder"
                        Grid.Column="1"
                        BackgroundColor="#0066CC"
                        StrokeThickness="0"
                        Padding="0,9">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOkTapped" />
                    </Border.GestureRecognizers>
                    
                    <Label x:Name="OkLabel"
                           Text="OK"
                           FontSize="13"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Border>
            </Grid>
        </Grid>
    </Border>
</toolkit:Popup>
