{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-mobile",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/GestaoChamados.Mobile/GestaoChamados.Mobile.csproj",
                "-f",
                "net9.0-windows10.0.19041.0",
                "-c",
                "Debug",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "run-mobile",
            "command": "powershell",
            "type": "shell",
            "args": [
                "-Command",
                "cd '${workspaceFolder}/GestaoChamados.Mobile/bin/Debug/net9.0-windows10.0.19041.0/win10-x64'; Start-Process '.\\GestaoChamados.Mobile.exe'"
            ],
            "dependsOn": "build-mobile",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/GestaoChamados/GestaoChamados.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/GestaoChamados/GestaoChamados.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/GestaoChamados/GestaoChamados.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
