{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET MAUI (Windows)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-mobile",
            "program": "${workspaceFolder}/GestaoChamados.Mobile/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/GestaoChamados.Mobile.exe",
            "args": [],
            "cwd": "${workspaceFolder}/GestaoChamados.Mobile",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET MAUI (Windows) - Alt",
            "type": "dotnet",
            "request": "launch",
            "preLaunchTask": "build-mobile",
            "program": "${workspaceFolder}/GestaoChamados.Mobile/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/GestaoChamados.Mobile.exe",
            "args": [],
            "cwd": "${workspaceFolder}/GestaoChamados.Mobile",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Launch (API)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/GestaoChamados/bin/Debug/net8.0/GestaoChamados.dll",
            "args": [],
            "cwd": "${workspaceFolder}/GestaoChamados",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against API",
            "url": "http://localhost:5013",
            "webRoot": "${workspaceFolder}"
        }
    ]
}