<Window x:Class="GestaoChamados.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Gestão de Chamados" 
        Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid>
        <Border Background="White" 
                CornerRadius="10" 
                Margin="20"
                Padding="40,40,40,30">
            <StackPanel>
                <!-- Logo Desktop -->
                <Image Source="Resources/png_logo_preto.png"
                       Width="200"
                       Height="70"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
                
                <TextBlock Text="GetBot"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#0066CC"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Email -->
                <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                        Padding="10"
                        FontSize="14"
                        Margin="0,0,0,20"/>

                <!-- Senha -->
                <TextBlock Text="Senha:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="SenhaPasswordBox" 
                            Padding="10"
                            FontSize="14"
                            Margin="0,0,0,30"/>

                <!-- Mensagem de Erro -->
                <TextBlock x:Name="ErrorTextBlock" 
                          Foreground="{StaticResource DangerColor}"
                          TextWrapping="Wrap"
                          Margin="0,0,0,10"
                          Visibility="Collapsed"/>

                <!-- Botão Login -->
                <Button Content="Entrar" 
                       Style="{StaticResource PrimaryButton}"
                       Click="LoginButton_Click"
                       IsDefault="True"/>
                       
                <!-- Info -->
                <TextBlock Text="Use: admin@gestaochamados.com / admin123" 
                          FontSize="10"
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
