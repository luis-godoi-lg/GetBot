<Window x:Class="GestaoChamados.Desktop.CriarEditarUsuarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuário" Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <DropShadowEffect x:Key="shadow" 
                         ShadowDepth="2" 
                         BlurRadius="10" 
                         Opacity="0.3" 
                         Color="Gray"/>
    </Window.Resources>
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="TituloTextBlock" 
                      Text="➕ Novo Usuário" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#333"/>
            <TextBlock Text="Preencha os dados abaixo" 
                      FontSize="14" 
                      Foreground="#666"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Form -->
        <Border Grid.Row="1" Background="White" 
               CornerRadius="10" Padding="25"
               Effect="{StaticResource shadow}">
            <StackPanel>
                <!-- Nome -->
                <TextBlock Text="Nome Completo" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Foreground="#333"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="NomeTextBox" 
                        Height="40" 
                        FontSize="14"
                        Padding="10"
                        Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Foreground="#333"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                        Height="40" 
                        FontSize="14"
                        Padding="10"
                        Margin="0,0,0,15"/>

                <!-- Senha -->
                <TextBlock x:Name="SenhaLabel" 
                          Text="Senha" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Foreground="#333"
                          Margin="0,0,0,5"/>
                <PasswordBox x:Name="SenhaPasswordBox" 
                            Height="40" 
                            FontSize="14"
                            Padding="10"
                            Margin="0,0,0,5"/>
                <TextBlock x:Name="SenhaHint"
                          Text="Deixe em branco para manter a senha atual" 
                          FontSize="11" 
                          Foreground="#999"
                          Margin="0,0,0,15"
                          Visibility="Collapsed"/>

                <!-- Role -->
                <TextBlock Text="Função" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          Foreground="#333"
                          Margin="0,0,0,5"/>
                <ComboBox x:Name="RoleComboBox" 
                         Height="40" 
                         FontSize="14"
                         Padding="10,0"
                         Margin="0,0,0,15">
                    <ComboBoxItem Content="Usuario" IsSelected="True"/>
                    <ComboBoxItem Content="Tecnico"/>
                    <ComboBoxItem Content="Gerente"/>
                    <ComboBoxItem Content="Admin"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,20,0,0">
            <Button Content="Cancelar" 
                   Width="120"
                   Height="45"
                   FontSize="14"
                   Background="#757575"
                   Foreground="White"
                   BorderThickness="0"
                   Margin="0,0,15,0"
                   Cursor="Hand"
                   Click="Cancelar_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="8"
                                           Padding="15,10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#616161"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="SalvarButton"
                   Content="Salvar" 
                   Width="120"
                   Height="45"
                   FontSize="14"
                   Background="#4CAF50"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand"
                   Click="Salvar_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="8"
                                           Padding="15,10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
