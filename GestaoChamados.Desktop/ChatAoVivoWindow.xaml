<Window x:Class="GestaoChamados.Desktop.ChatAoVivoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat ao Vivo - Atendimento" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">
    
    <Window.Resources>
        <!-- Estilo para mensagens do tÃ©cnico (direita - azul) -->
        <Style x:Key="TecnicoMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#0066CC"/>
            <Setter Property="CornerRadius" Value="15,15,0,15"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="100,5,10,5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>

        <!-- Estilo para mensagens do cliente (esquerda - cinza) -->
        <Style x:Key="ClienteMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#E9ECEF"/>
            <Setter Property="CornerRadius" Value="15,15,15,0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="10,5,100,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0066CC" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¬" FontSize="24" Foreground="White" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock x:Name="TitleTextBlock"
                                   Text="Chat ao Vivo - Chamado #2025004" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock x:Name="ClienteTextBlock"
                                   Text="Cliente: usuario@email.com" 
                                   FontSize="13" 
                                   Foreground="White"
                                   Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <Button Content="âœ• Fechar" 
                        Click="FecharButton_Click"
                        HorizontalAlignment="Right"
                        Padding="15,8"
                        Background="#0052A3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="13"/>
            </Grid>
        </Border>

        <!-- Info do Chamado -->
        <Border Grid.Row="1" Background="White" Padding="20,15" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock x:Name="AssuntoTextBlock"
                           Text="Assunto: Mouse nÃ£o funciona" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#333"/>
                <TextBlock x:Name="DescricaoTextBlock"
                           Text="DescriÃ§Ã£o: O mouse parou de funcionar repentinamente..."
                           FontSize="13"
                           Foreground="#666"
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Ãrea de Chat -->
        <ScrollViewer Grid.Row="2" 
                      x:Name="ChatScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      Background="White">
            <StackPanel x:Name="ChatMessagesPanel" Margin="10"/>
        </ScrollViewer>

        <!-- Campo de Entrada -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="#DEE2E6" 
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="MessageTextBox"
                         Grid.Column="0"
                         Padding="12"
                         FontSize="14"
                         BorderBrush="#CED4DA"
                         BorderThickness="1"
                         VerticalAlignment="Center"
                         KeyDown="MessageTextBox_KeyDown"
                         TextWrapping="Wrap"
                         MaxHeight="100"/>

                <Button Grid.Column="1"
                        x:Name="SendButton"
                        Content="âœˆ Enviar"
                        Click="SendButton_Click"
                        Margin="10,0,0,0"
                        Padding="20,12"
                        Background="#0066CC"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="14"
                        FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- RodapÃ© com AÃ§Ã£o -->
        <Border Grid.Row="4" Background="#F8F9FA" Padding="20,15">
            <Button x:Name="MarcarResolvidoButton"
                    Content="âœ“ Marcar como Resolvido"
                    Click="MarcarResolvidoButton_Click"
                    Padding="20,12"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
