<Window x:Class="GestaoChamados.Desktop.GerenteDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard do Gerente" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5">
    
    <Window.Resources>
        <DropShadowEffect x:Key="shadow" 
                         ShadowDepth="2" 
                         BlurRadius="10" 
                         Opacity="0.3" 
                         Color="Gray"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <Grid>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Resources/png_logo_branco.png"
                               Width="180"
                               Height="45"
                               Stretch="Uniform"
                               HorizontalAlignment="Left"
                               Margin="0,0,8,0"/>
                        <TextBlock Text="GetBot"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="UserInfoTextBlock" 
                              Text="Gerente" 
                              FontSize="14" 
                              Foreground="White" 
                              Opacity="0.9"
                              Margin="0,8,0,0"/>
                </StackPanel>
                <Button Content="ðŸšª Sair" 
                       Width="100"
                       Height="35"
                       HorizontalAlignment="Right"
                       Background="#f44336"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="LogoutButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#d32f2f"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- Cards de Resumo -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Card 1: Resolvidos -->
                    <Border Grid.Column="0" Background="#4CAF50" 
                           CornerRadius="10" Padding="20" Margin="0,0,10,0"
                           Effect="{StaticResource shadow}">
                        <StackPanel>
                            <TextBlock Text="âœ… Chamados Resolvidos" 
                                      FontSize="14" 
                                      Foreground="White" 
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="ResolvidosText" 
                                      Text="0" 
                                      FontSize="36" 
                                      FontWeight="Bold" 
                                      Foreground="White"
                                      Margin="0,10,0,0"/>
                            <TextBlock x:Name="AvaliacaoMediaText" 
                                      Text="MÃ©dia: 0.0 â­" 
                                      FontSize="12" 
                                      Foreground="White" 
                                      Opacity="0.9"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 2: Em Atendimento -->
                    <Border Grid.Column="1" Background="#2196F3" 
                           CornerRadius="10" Padding="20" Margin="0,0,10,0"
                           Effect="{StaticResource shadow}">
                        <StackPanel>
                            <TextBlock Text="ðŸ”§ Em Atendimento" 
                                      FontSize="14" 
                                      Foreground="White" 
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="EmAtendimentoText" 
                                      Text="0" 
                                      FontSize="36" 
                                      FontWeight="Bold" 
                                      Foreground="White"
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 3: Aguardando Atendente -->
                    <Border Grid.Column="2" Background="#f44336" 
                           CornerRadius="10" Padding="20"
                           Effect="{StaticResource shadow}">
                        <StackPanel>
                            <TextBlock Text="â³ Aguardando Atendente" 
                                      FontSize="14" 
                                      Foreground="White" 
                                      FontWeight="SemiBold"/>
                            <TextBlock x:Name="NaoAtendidosText" 
                                      Text="0" 
                                      FontSize="36" 
                                      FontWeight="Bold" 
                                      Foreground="White"
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Cards Adicionais -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- UsuÃ¡rios -->
                    <Border Grid.Column="0" Background="White" 
                           CornerRadius="10" Padding="20" Margin="0,0,10,0"
                           Effect="{StaticResource shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="UsuÃ¡rios" 
                                      FontSize="14" 
                                      Foreground="#666" 
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="UsuariosText" 
                                      Text="0" 
                                      FontSize="32" 
                                      FontWeight="Bold" 
                                      Foreground="#2196F3"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- TÃ©cnicos -->
                    <Border Grid.Column="1" Background="White" 
                           CornerRadius="10" Padding="20" Margin="0,0,10,0"
                           Effect="{StaticResource shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="TÃ©cnicos" 
                                      FontSize="14" 
                                      Foreground="#666" 
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TecnicosText" 
                                      Text="0" 
                                      FontSize="32" 
                                      FontWeight="Bold" 
                                      Foreground="#2196F3"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Chamados -->
                    <Border Grid.Column="2" Background="White" 
                           CornerRadius="10" Padding="20" Margin="0,0,10,0"
                           Effect="{StaticResource shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Total de Chamados" 
                                      FontSize="14" 
                                      Foreground="#666" 
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalChamadosText" 
                                      Text="0" 
                                      FontSize="32" 
                                      FontWeight="Bold" 
                                      Foreground="#666"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Taxa de ResoluÃ§Ã£o -->
                    <Border Grid.Column="3" Background="White" 
                           CornerRadius="10" Padding="20"
                           Effect="{StaticResource shadow}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="Taxa de ResoluÃ§Ã£o" 
                                      FontSize="14" 
                                      Foreground="#666" 
                                      HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TaxaResolucaoText" 
                                      Text="0%" 
                                      FontSize="32" 
                                      FontWeight="Bold" 
                                      Foreground="#4CAF50"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Listas -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- DistribuiÃ§Ã£o por Status -->
                    <Border Grid.Column="0" Background="White" 
                           CornerRadius="10" Padding="20" Margin="0,0,10,0"
                           Effect="{StaticResource shadow}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š DistribuiÃ§Ã£o por Status" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#333"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,20"/>
                            
                            <!-- Legenda dos status -->
                            <StackPanel x:Name="LegendaStackPanel" Margin="0,0,0,20">
                                <!-- Aguardando Atendente -->
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Fill="#f44336" Width="14" Height="14" 
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Aguardando Atendente" 
                                              FontSize="14" Margin="12,0,0,0" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" x:Name="AguardandoCountText" 
                                              Text="0" FontWeight="Bold" FontSize="14"
                                              Foreground="#666"/>
                                </Grid>
                                
                                <!-- Em Atendimento -->
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Fill="#FFC107" Width="14" Height="14" 
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Em Atendimento" 
                                              FontSize="14" Margin="12,0,0,0" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" x:Name="EmAtendimentoCountText" 
                                              Text="0" FontWeight="Bold" FontSize="14"
                                              Foreground="#666"/>
                                </Grid>
                                
                                <!-- Resolvidos -->
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Fill="#4CAF50" Width="14" Height="14" 
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="Resolvidos" 
                                              FontSize="14" Margin="12,0,0,0" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" x:Name="ResolvidosCountText" 
                                              Text="0" FontWeight="Bold" FontSize="14"
                                              Foreground="#666"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- GrÃ¡fico de barras horizontais -->
                            <Grid x:Name="GraficoGrid" Height="90">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Barra Aguardando -->
                                <Border Grid.Row="0" Background="#f44336" 
                                       x:Name="BarraAguardando"
                                       Height="20" HorizontalAlignment="Left" 
                                       CornerRadius="3" Margin="0,2"/>
                                
                                <!-- Barra Em Atendimento -->
                                <Border Grid.Row="1" Background="#FFC107" 
                                       x:Name="BarraEmAtendimento"
                                       Height="20" HorizontalAlignment="Left" 
                                       CornerRadius="3" Margin="0,2"/>
                                
                                <!-- Barra Resolvidos -->
                                <Border Grid.Row="2" Background="#4CAF50" 
                                       x:Name="BarraResolvidos"
                                       Height="20" HorizontalAlignment="Left" 
                                       CornerRadius="3" Margin="0,2"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Desempenho por TÃ©cnico -->
                    <Border Grid.Column="1" Background="White" 
                           CornerRadius="10" Padding="20"
                           Effect="{StaticResource shadow}">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¥ Desempenho por TÃ©cnico" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#333"
                                      Margin="0,0,0,15"/>
                            <ListBox x:Name="TecnicosListBox" 
                                    BorderThickness="0"
                                    Background="Transparent"
                                    MaxHeight="250">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" 
                                                      Text="{Binding Nome}" 
                                                      FontSize="15"
                                                      VerticalAlignment="Center"/>
                                            <Border Grid.Column="2" 
                                                   Background="#4CAF50" 
                                                   CornerRadius="10" 
                                                   Padding="10,6">
                                                <TextBlock FontWeight="SemiBold" 
                                                          Foreground="White"
                                                          FontSize="13">
                                                    <Run Text="{Binding Resolvidos}"/>
                                                    <Run Text=" resolvidos"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- BotÃµes de AÃ§Ã£o -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="0,30,0,0">
                    <Button Content="ðŸ‘¥ Gerenciar UsuÃ¡rios" 
                           Width="200"
                           Height="45"
                           FontSize="14"
                           Background="#2196F3"
                           Foreground="White"
                           BorderThickness="0"
                           Margin="0,0,15,0"
                           Cursor="Hand"
                           Click="GerenciarUsuarios_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8"
                                                   Padding="15,10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸ“‹ RelatÃ³rio Detalhado" 
                           Width="200"
                           Height="45"
                           FontSize="14"
                           Background="#757575"
                           Foreground="White"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="Relatorio_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8"
                                                   Padding="15,10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#616161"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
