<Window x:Class="GestaoChamados.Desktop.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard de Chamados - ChatBot" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F6FA">
    
    <Window.Resources>
        <!-- Estilo para cartÃµes de estatÃ­sticas -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para nÃºmeros grandes -->
        <Style x:Key="BigNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <!-- Estilo para tÃ­tulos de cartÃµes -->
        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- Estilo para cabeÃ§alhos de tabela -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <!-- Estilo para cÃ©lulas de tabela -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Azul com Logo -->
        <Border Grid.Row="0" Background="#0066CC" Padding="25,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Image Grid.Column="0"
                       Source="Resources/png_logo_branco.png"
                       Width="150"
                       Height="40"
                       Stretch="Uniform"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
                
                <TextBlock Grid.Column="1"
                           Text="GetBot"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="0,0,0,0"/>

                <!-- BotÃ£o Chamados (para TÃ©cnico) -->
                <Button Grid.Column="2"
                        x:Name="ChamadosButton" 
                        Content="Chamados" 
                        Click="ChamadosButton_Click"
                        Padding="12,8"
                        Margin="15,0,0,0"
                        Background="Transparent" 
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="14">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0052A3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- BotÃ£o Dashboard (ativo) -->
                <Button Grid.Column="3"
                        x:Name="DashboardButton" 
                        Content="Dashboard" 
                        Padding="12,8"
                        Margin="5,0,0,0"
                        Background="#0052A3" 
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="14"/>

                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                    <TextBlock Text="ðŸ‘¤" FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="UserInfoTextBlock" 
                               Text="tecnico@email.com" 
                               FontSize="14" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="6"
                        x:Name="LogoutButton" 
                        Content="Sair" 
                        Click="LogoutButton_Click"
                        Padding="15,8"
                        Background="#0052A3" 
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="13"/>
            </Grid>
        </Border>

        <!-- TÃ­tulo -->
        <Border Grid.Row="1" Background="White" Padding="30,25,30,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <TextBlock Text="Dashboard de Chamados" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#333"
                           VerticalAlignment="Center"/>
                
                <TextBlock x:Name="SubtitleTextBlock"
                           Text="Exibindo estatÃ­sticas para os chamados atribuÃ­dos a vocÃª." 
                           FontSize="14" 
                           Foreground="#666"
                           VerticalAlignment="Center"
                           Margin="0,40,0,0"/>
            </Grid>
        </Border>

        <!-- CartÃµes de EstatÃ­sticas -->
        <Grid Grid.Row="2" Margin="20,30,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total de Chamados -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Background="#2563EB">
                <StackPanel>
                    <TextBlock Text="Total de Chamados" 
                               Style="{StaticResource CardTitleStyle}"
                               Foreground="White"/>
                    <TextBlock x:Name="TotalChamadosText" 
                               Text="0" 
                               Style="{StaticResource BigNumberStyle}"
                               Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Clientes na Fila -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Background="#06B6D4">
                <StackPanel>
                    <TextBlock Text="Clientes na Fila" 
                               Style="{StaticResource CardTitleStyle}"
                               Foreground="White"/>
                    <TextBlock x:Name="ClientesFilaText" 
                               Text="0" 
                               Style="{StaticResource BigNumberStyle}"
                               Foreground="White"/>
                    <Button x:Name="VerFilaButton"
                            Content="Ver Fila"
                            Click="VerFilaButton_Click"
                            Margin="0,15,0,0"
                            Padding="12,6"
                            Background="White"
                            Foreground="#06B6D4"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="SemiBold"
                            FontSize="13"/>
                </StackPanel>
            </Border>

            <!-- Em Atendimento -->
            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Background="#F59E0B">
                <StackPanel>
                    <TextBlock Text="Em Atendimento" 
                               Style="{StaticResource CardTitleStyle}"
                               Foreground="White"/>
                    <TextBlock x:Name="EmAtendimentoText" 
                               Text="0" 
                               Style="{StaticResource BigNumberStyle}"
                               Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Resolvidos -->
            <Border Grid.Column="3" Style="{StaticResource StatCardStyle}" Background="#10B981">
                <StackPanel>
                    <TextBlock Text="Resolvidos" 
                               Style="{StaticResource CardTitleStyle}"
                               Foreground="White"/>
                    <TextBlock x:Name="ResolvidosText" 
                               Text="0" 
                               Style="{StaticResource BigNumberStyle}"
                               Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Cards de MÃ©tricas AvanÃ§adas (apenas para TÃ©cnico) -->
        <Grid Grid.Row="3" x:Name="TecnicoMetricsGrid" Margin="20,10,20,10" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Taxa de ResoluÃ§Ã£o -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Background="#3B82F6">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š Taxa de ResoluÃ§Ã£o" 
                               Style="{StaticResource CardTitleStyle}"
                               Foreground="White"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="TaxaResolucaoText" 
                                   Text="0.0" 
                                   Style="{StaticResource BigNumberStyle}"
                                   Foreground="White"/>
                        <TextBlock Text="%" 
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Bottom"
                                   Margin="5,0,0,10"/>
                    </StackPanel>
                    <TextBlock Text="Chamados resolvidos vs total atribuÃ­do" 
                               FontSize="12"
                               Foreground="White"
                               Opacity="0.8"
                               TextAlignment="Center"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Nota de SatisfaÃ§Ã£o -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Background="#F59E0B">
                <StackPanel>
                    <TextBlock Text="â­ Nota de SatisfaÃ§Ã£o" 
                               Style="{StaticResource CardTitleStyle}"
                               Foreground="White"/>
                    <TextBlock x:Name="NotaSatisfacaoText" 
                               Text="--" 
                               Style="{StaticResource BigNumberStyle}"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalAvaliacoesText"
                               Text="0 avaliaÃ§Ãµes recebidas" 
                               FontSize="12"
                               Foreground="White"
                               Opacity="0.8"
                               TextAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Meus Chamados -->
            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Background="#6B7280">
                <StackPanel>
                    <TextBlock Text="ðŸ“‹ Meus Chamados" 
                               Style="{StaticResource CardTitleStyle}"
                               Foreground="White"/>
                    <StackPanel HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Border Background="#10B981" 
                                CornerRadius="15" 
                                Padding="12,6" 
                                Margin="0,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="MeusResolvidosText" 
                                           Text="0" 
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Resolvidos" 
                                           FontSize="14"
                                           Foreground="White"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#F59E0B" 
                                CornerRadius="15" 
                                Padding="12,6" 
                                Margin="0,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="MeusEmAndamentoText" 
                                           Text="0" 
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Em andamento" 
                                           FontSize="14"
                                           Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- SeÃ§Ã£o de GrÃ¡ficos e Top UsuÃ¡rios -->
        <Grid Grid.Row="4" Margin="20,10,20,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DistribuiÃ§Ã£o por Status (Placeholder para grÃ¡fico) -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="25"
                    Margin="10">
                <Border.Effect>
                    <DropShadowEffect Color="#000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="DistribuiÃ§Ã£o de Chamados por Status" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="#333"
                               Margin="0,0,0,20"/>
                    
                    <!-- Legenda do grÃ¡fico -->
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Rectangle Width="40" Height="20" Fill="#EF4444" Margin="0,0,10,0"/>
                            <TextBlock Text="Aberto: " FontSize="14" Foreground="#333" FontWeight="SemiBold"/>
                            <TextBlock x:Name="AbertosLegendaText" Text="0" FontSize="14" Foreground="#666" Margin="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Rectangle Width="40" Height="20" Fill="#F59E0B" Margin="0,0,10,0"/>
                            <TextBlock Text="Em Atendimento: " FontSize="14" Foreground="#333" FontWeight="SemiBold"/>
                            <TextBlock x:Name="EmAtendimentoLegendaText" Text="0" FontSize="14" Foreground="#666" Margin="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Rectangle Width="40" Height="20" Fill="#10B981" Margin="0,0,10,0"/>
                            <TextBlock Text="Resolvido: " FontSize="14" Foreground="#333" FontWeight="SemiBold"/>
                            <TextBlock x:Name="ResolvidosLegendaText" Text="0" FontSize="14" Foreground="#666" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock Text="ðŸ“Š GrÃ¡fico visual disponÃ­vel na versÃ£o web" 
                               FontSize="13" 
                               Foreground="#999"
                               HorizontalAlignment="Center"
                               Margin="0,40,0,0"
                               FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <!-- Top UsuÃ¡rios (Aberturas) -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="25"
                    Margin="10">
                <Border.Effect>
                    <DropShadowEffect Color="#000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Top UsuÃ¡rios (Aberturas)" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="#333"
                               Margin="0,0,0,20"/>
                    
                    <ItemsControl x:Name="TopUsuariosItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Email}" 
                                                   FontSize="14"
                                                   Foreground="#333"
                                                   VerticalAlignment="Center"/>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Border Background="#10B981" 
                                                    CornerRadius="4" 
                                                    Padding="30,8" 
                                                    MinWidth="80">
                                                <TextBlock Text="{Binding Total}" 
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock x:Name="NenhumUsuarioText"
                               Text="ðŸ“‹ Nenhum chamado aberto ainda" 
                               FontSize="14" 
                               Foreground="#999"
                               HorizontalAlignment="Center"
                               Margin="0,40,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
