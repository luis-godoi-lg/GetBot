<Window x:Class="GestaoChamados.Desktop.AguardandoAtendimentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aguardando Atendimento" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <DropShadowEffect x:Key="shadow" 
                         ShadowDepth="2" 
                         BlurRadius="10" 
                         Opacity="0.3" 
                         Color="Gray"/>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="â³ Aguardando Atendimento" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="ProtocoloText"
                          Text="Protocolo: #0000000" 
                          FontSize="16" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
            <StackPanel>
                <!-- Status Animation -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Padding="30"
                       Margin="0,0,0,20"
                       Effect="{StaticResource shadow}">
                    <StackPanel HorizontalAlignment="Center">
                        <Ellipse x:Name="AnimatedCircle" 
                                Width="80" 
                                Height="80" 
                                Fill="#FFC107"
                                HorizontalAlignment="Center">
                            <Ellipse.RenderTransform>
                                <ScaleTransform x:Name="CircleScale" 
                                              ScaleX="1" 
                                              ScaleY="1" 
                                              CenterX="40" 
                                              CenterY="40"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        
                        <TextBlock Text="â° Aguardando tÃ©cnico..." 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Foreground="#333"
                                  HorizontalAlignment="Center"
                                  Margin="0,20,0,0"/>
                        
                        <TextBlock x:Name="StatusText"
                                  Text="VocÃª estÃ¡ na fila de atendimento"
                                  FontSize="14"
                                  Foreground="#666"
                                  HorizontalAlignment="Center"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Info Cards -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Padding="20"
                       Margin="0,0,0,15"
                       Effect="{StaticResource shadow}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ InformaÃ§Ãµes do Chamado" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Foreground="#333"
                                  Margin="0,0,0,10"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Assunto: " FontWeight="SemiBold" Foreground="#666"/>
                            <TextBlock x:Name="AssuntoText" Text="" Foreground="#333"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Status: " FontWeight="SemiBold" Foreground="#666"/>
                            <TextBlock x:Name="StatusChamadoText" Text="Aguardando Atendente" Foreground="#FFC107" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Criado em: " FontWeight="SemiBold" Foreground="#666"/>
                            <TextBlock x:Name="DataCriacaoText" Text="" Foreground="#333"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Instructions -->
                <Border Background="#E3F2FD" 
                       CornerRadius="10" 
                       Padding="20"
                       BorderBrush="#2196F3"
                       BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ O que acontece agora?" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Foreground="#1976D2"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock TextWrapping="Wrap" Foreground="#333" Margin="0,5">
                            <Run Text="â€¢ "/>
                            <Run Text="Um tÃ©cnico serÃ¡ notificado sobre sua solicitaÃ§Ã£o"/>
                        </TextBlock>
                        
                        <TextBlock TextWrapping="Wrap" Foreground="#333" Margin="0,5">
                            <Run Text="â€¢ "/>
                            <Run Text="Quando assumir seu chamado, vocÃª serÃ¡ automaticamente direcionado para o chat"/>
                        </TextBlock>
                        
                        <TextBlock TextWrapping="Wrap" Foreground="#333" Margin="0,5">
                            <Run Text="â€¢ "/>
                            <Run Text="VocÃª pode fechar esta janela e voltar depois - seu chamado permanece na fila"/>
                        </TextBlock>
                        
                        <TextBlock TextWrapping="Wrap" Foreground="#333" Margin="0,5">
                            <Run Text="â€¢ "/>
                            <Run Text="Tempo mÃ©dio de espera: 2-5 minutos"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="White" Padding="20" BorderBrush="#DDD" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="ðŸ“‹ Ver Meus Chamados" 
                       Width="180"
                       Height="40"
                       FontSize="14"
                       Background="#4CAF50"
                       Foreground="White"
                       BorderThickness="0"
                       Margin="0,0,10,0"
                       Cursor="Hand"
                       Click="VerChamados_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45a049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="ðŸšª Voltar ao InÃ­cio" 
                       Width="180"
                       Height="40"
                       FontSize="14"
                       Background="#757575"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="Voltar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#616161"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
