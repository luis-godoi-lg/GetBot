                        {
                            <li class="nav-item">
                                <span class="nav-link">üë§ @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Logout">Sair</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted bg-white shadow-sm fixed-bottom">
